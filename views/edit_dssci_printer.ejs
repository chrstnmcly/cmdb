<%- include('layout/header_dssci_printer') %>
    <div class="container">
        <div class="row">
            <div class="col-lg-6 mx-auto mt-4">
                <div class="card-shadow">
                    <div class="card-header bg-dark">
                        <h6 class="text-light">Edit DSSCI - Printer <%= dssci_printer.name %></h6>
                    </div>
                    <div class="card-body p-4">
                        <form action="/update_dssci_printer/<%= dssci_printer._id %>" method="post" id="add-form" enctype="multipart/form-data">
                            <div class="mb-3">
                                <label for="assetTag">Asset Tag</label>
                                <input type="text" name="assetTag" class="form-control form-control-md" placeholder="Enter Asset Tag" value="<%= dssci_printer.tag %>" required />
                            </div>
                            <div class="mb-3">
                                <label for="serialNumber">Serial Number</label>
                                <input type="text" name="serialNumber" class="form-control form-control-md" placeholder="Enter Serial Number" value="<%= dssci_printer.serialNumber %>" required />
                            </div>
                            <div class="mb-3">
                                <label for="roomLocation">Department</label>
                                <input type="text" name="roomLocation" class="form-control form-control-md" placeholder="Enter Location" value="<%= dssci_printer.roomLocation %>" required />
                            </div>
                            <div class="mb-3">
                                <label for="image" class="form-label">Select Image</label>
                                <input class="form-control form-control-md" type="file" name="image" />
                            </div>
                            <input type="hidden" name="old_image" value="<%= dssci_printer.image %>" />
                            <img src="/<%= dssci_printer.image %>" width="100" class="img-thumbnail mt-1" alt="" />
                            <div class="mb-3 d-grid">
                                <input type="submit" name="submit" value="update DSSCI - Printer" class="btn btn-dark btn-md" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
<%- include('layout/footer_dssci_printer') %>
