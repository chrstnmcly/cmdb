<%- include('layout/header_ap') %>
    <div class="container">
        <div class="row">
            <div class="col-lg-6 mx-auto mt-4">
                <div class="card-shadow">
                    <div class="card-header bg-dark">
                        <h6 class="text-light">Edit AP <%= ap.name %></h6>
                    </div>
                    <div class="card-body p-4">
                        <form action="/update_ap/<%= ap._id %>" method="post" id="add-form" enctype="multipart/form-data">
                            <div class="mb-3">
                                <label for="serialNumber">Serial Number</label>
                                <input type="text" name="serialNumber" class="form-control form-control-md" placeholder="Enter Serial Number" value="<%= ap.serialNumber %>" required />
                            </div>
                            <div class="mb-3">
                                <label for="assetTag">Tag Number</label>
                                <input type="text" name="assetTag" class="form-control form-control-md" placeholder="Enter Tag Number" value="<%= ap.tag %>" required />
                            </div>
                            <div class="mb-3">
                                <label for="area">Area</label>
                                <input type="text" name="area" class="form-control form-control-md" placeholder="Enter Area" value="<%= ap.area %>" required />
                            </div>
                            <div class="mb-3">
                                <label for="location">Location</label>
                                <input type="text" name="location" class="form-control form-control-md" placeholder="Enter Location" value="<%= ap.location %>" required />
                            </div>
                            <div class="mb-3">
                                <label for="image" class="form-label">Select Image</label>
                                <input class="form-control form-control-md" type="file" name="image" />
                            </div>
                            <input type="hidden" name="old_image" value="<%= ap.image %>" />
                            <img src="/<%= ap.image %>" width="100" class="img-thumbnail mt-1" alt="" />
                            <div class="mb-3 d-grid">
                                <input type="submit" name="submit" value="update AP" class="btn btn-dark btn-md" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
<%- include('layout/footer_ap') %>
